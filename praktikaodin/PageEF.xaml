<Page x:Class="praktikaodin.PageEF"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:praktikaodin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageEF">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="298*"/>
            <RowDefinition Height="111*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">ЭТО EF</Label>
        <DataGrid x:Name="ShoeInventoryEF" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1"/>
        <Grid Grid.Row="2">
            <ComboBox x:Name="PageEFComboBox1" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0" Width="150" Height="50"/>
            <ComboBox x:Name="PageEFComboBox2" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="0" Width="150" Height="50" Margin="20"/>
            <ComboBox x:Name="PageEFComboBox3" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="0" Width="150" Height="50" Margin="0, 0, 20, 0"/>
        </Grid>
    </Grid>
</Page>
